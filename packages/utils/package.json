    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@polkadot/keyring": "^12.6.2",
    "@polkadot/util": "^12.6.2",
    "bignumber.js": "^9.1.1"
