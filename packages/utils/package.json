  ],
  "description": "Utilities for Polkadot Dapps.",
  "keywords": [
    "Polkadot",
    "Utilities"
  ],
  "bugs": {
    "url": "https://github.com/polkadot-cloud/library/issues"
  },
  "homepage": "https://github.com/polkadot-cloud/library#readme",
  "scripts": {
    "build:mock": "node ../../scripts/generatePackageJson.mjs -p utils",
    "build": "rm -fr dist && tsup && yarn run copy",
    "copy": "cp ./README.npm.md dist/README.md && cp ./LICENSE ./dist/LICENSE && node ../../scripts/generatePackageJson.mjs -p utils",
    "clear": "rm -rf node_modules dist tsconfig.tsbuildinfo",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@polkadot/keyring": "^12.6.1",
    "@polkadot/util": "^12.5.1",
    "bignumber.js": "^9.1.1"
  },
  "peerDependencies": {
    "@polkadot/keyring": "^12.6.1",
    "@polkadot/util": "^12.5.1",
    "bignumber.js": "^9.1.1"
  },
  "devDependencies": {
    "tsup": "^8.0.1"
  }
}
